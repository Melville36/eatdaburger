<h1 class="headersMiddle">Eat Da Burger!</h1>
<h2 class="headersMiddle">Create a tasty burger or eat one now!</h2>

<div class="burgerList">
<h2 class="headersMiddle">Da Menu</h2>

<ol>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          {{this.burger_name}} <button type="submit">EAT IT!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ol>
</div>

<div class="devouredBurgers">
<h2>Burgers you ATE!</h2>

<ol>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">{{this.burger_name}} --> Want Another One?!</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ol>
</div>

<div class="newBurger">
<h2>Create Your Own BURGER!!</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="burger_name">Burger Name:</label>
    <input type="text" id="burger" name="burger_name">
  </div>

  <div class="form-group">
    <input type="hidden" name="devoured" value="0">
  </div>

  <button type="submit">Add Da Burger!</button>
</form>
</div>
